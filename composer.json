{
    "name": "binarcode/restify-boost",
    "description": "Restify Boost - AI-powered Laravel Restify assistant providing comprehensive documentation access and code generation tools.",
    "keywords": [
        "laravel",
        "restify",
        "mcp",
        "documentation",
        "ai"
    ],
    "homepage": "https://github.com/binarcode/restify-boost",
    "license": "MIT",
    "authors": [
        {
            "name": "Eduard Lupacescu",
            "email": "eduard.lupacescu@binarcode.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "illuminate/console": "^10.0|^11.0|^12.0",
        "illuminate/contracts": "^10.0|^11.0|^12.0",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "laravel/mcp": "^0.1.1",
        "spatie/laravel-package-tools": "^1.16",
        "symfony/yaml": "^6.0|^7.0"
    },
    "suggest": {
        "laravel/mcp": "Required for automatic MCP server registration with AI assistants",
        "php-mcp/laravel": "Alternative MCP implementation for Laravel integration"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "orchestra/testbench": "^9.0|^10.0",
        "pestphp/pest": "^3.0|^4.0",
        "pestphp/pest-plugin-arch": "^3.0|^4.0",
        "pestphp/pest-plugin-laravel": "^3.0|^4.0",
        "phpstan/phpstan": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "BinarCode\\RestifyBoost\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BinarCode\\RestifyBoost\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@php -r \"file_exists('vendor/bin/testbench') && passthru('vendor/bin/testbench package:discover --ansi') || exit(0);\""
        ],
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "lint": [
            "vendor/bin/pint",
            "vendor/bin/phpstan"
        ],
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "check": [
            "@composer lint",
            "@composer test"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "branch-alias": {
            "dev-main": "1.x-dev"
        },
        "laravel": {
            "providers": [
                "BinarCode\\RestifyBoost\\RestifyBoostServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
